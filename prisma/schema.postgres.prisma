generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://neondb_owner:npg_TNSOG7p4YcnP@ep-square-frost-ahkqztsu-pooler.c-3.us-east-1.aws.neon.tech/neondb?sslmode=require"
}

model User {
  id              String           @id @default(cuid())
  username        String           @unique
  password        String
  name            String
  surname         String
  role            Role             @default(STUDENT)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  city            String?
  classLevel      String?
  district        String?
  examCenter      String?
  kvkkConsent     Boolean          @default(false)
  parentName      String?
  parentSurname   String?
  phone           String?
  referenceSource String?
  school          String?
  session         String?
  analyses        Analysis[]
  examAssignments ExamAssignment[]
  studentResults  Result[]
  studyPlans      StudyPlanItem[]
  teachers        TeacherStudent[] @relation("StudentToTeacher")
  students        TeacherStudent[] @relation("TeacherToStudent")
  mistakes        Mistake[]
}

model Mistake {
  id            String   @id @default(cuid())
  studentId     String
  imageData     Bytes
  imageMimeType String
  description   String?
  adminNote     String?
  lesson        String   @default("Genel")
  createdAt     DateTime @default(now())
  student       User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model TeacherStudent {
  id        String   @id @default(cuid())
  teacherId String
  studentId String
  createdAt DateTime @default(now())
  student   User     @relation("StudentToTeacher", fields: [studentId], references: [id], onDelete: Cascade)
  teacher   User     @relation("TeacherToStudent", fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([teacherId, studentId])
}

model Exam {
  id          String           @id @default(cuid())
  name        String
  date        DateTime
  type        String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  pdfData     Bytes?
  pdfMimeType String?
  pdfName     String?
  assignments ExamAssignment[]
  results     Result[]
}

model Result {
  id                String   @id @default(cuid())
  studentId         String
  examId            String
  totalScore        Float
  totalNet          Float
  details           String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  resultPdfData     Bytes?
  resultPdfMimeType String?
  resultPdfName     String?
  exam              Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  student           User     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, examId])
}

model Analysis {
  id           String   @id @default(cuid())
  studentId    String
  title        String
  content      String
  analysisType String   @default("GENEL_DENEME")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  student      User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model ExamAssignment {
  id        String   @id @default(cuid())
  examId    String
  studentId String
  createdAt DateTime @default(now())
  exam      Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([examId, studentId])
}

model AnswerKey {
  id          String   @id @default(cuid())
  title       String
  description String?
  pdfData     Bytes
  pdfName     String
  pdfMimeType String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogPost {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  content       String
  excerpt       String?
  published     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  author        String?
  imageData     Bytes?
  imageMimeType String?
}

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Partner {
  id           String   @id @default(cuid())
  name         String
  logoData     Bytes
  logoMimeType String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Package {
  id            String   @id @default(cuid())
  title         String
  description   String
  imageData     Bytes
  imageMimeType String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SliderImage {
  id            String   @id @default(cuid())
  imageData     Bytes
  imageMimeType String
  order         Int      @default(0)
  title         String?
  subtitle      String?
  description   String?
  highlight     String?
  bgClass       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model StudyPlanItem {
  id        String   @id @default(cuid())
  day       String
  subject   String
  duration  Int
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  studentId String
  outcomes  String[]
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model VerificationCode {
  id        String   @id @default(cuid())
  phone     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
