generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://neondb_owner:npg_TNSOG7p4YcnP@ep-square-frost-ahkqztsu-pooler.c-3.us-east-1.aws.neon.tech/neondb?sslmode=require"
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String
  surname   String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Extended Profile Info
  classLevel      String?
  school          String?
  session         String?
  examCenter      String?
  parentName      String?
  parentSurname   String?
  city            String?
  district        String?
  phone           String?
  referenceSource String?
  kvkkConsent     Boolean  @default(false)

  // Relations
  studentResults Result[]
  analyses      Analysis[] // New relation
  
  // For Teachers
  students      TeacherStudent[] @relation("TeacherToStudent") // Students assigned to this teacher
  
  // For Students
  teachers      TeacherStudent[] @relation("StudentToTeacher") // Teachers assigned to this student
  examAssignments ExamAssignment[] // Exams assigned to this student
}

model TeacherStudent {
  id        String   @id @default(cuid())
  teacherId String
  studentId String
  createdAt DateTime @default(now())

  teacher   User     @relation("TeacherToStudent", fields: [teacherId], references: [id], onDelete: Cascade)
  student   User     @relation("StudentToTeacher", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([teacherId, studentId])
}

model Exam {
  id        String   @id @default(cuid())
  name      String
  date      DateTime
  type      String   // TYT, AYT, LGS, etc.
  pdfData   Bytes?   // Binary data for PDF
  pdfName   String?  // Original filename
  pdfMimeType String? // Mime type (e.g. application/pdf)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  results   Result[]
  assignments ExamAssignment[]
}

model Result {
  id         String   @id @default(cuid())
  studentId  String
  examId     String
  totalScore Float
  totalNet   Float
  details    String   // JSON string for detailed results (Lesson based correct/incorrect/empty)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  student    User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  exam       Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)

  @@unique([studentId, examId])
}

model Analysis {
  id        String   @id @default(cuid())
  studentId String
  title     String
  content   String   // Markdown content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model ExamAssignment {
  id        String   @id @default(cuid())
  examId    String
  studentId String
  createdAt DateTime @default(now())

  exam      Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([examId, studentId])
}

model AnswerKey {
  id          String   @id @default(cuid())
  title       String
  description String?
  pdfData     Bytes    // Binary data for PDF
  pdfName     String   // Original filename
  pdfMimeType String   // Mime type (e.g. application/pdf)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   // HTML content
  excerpt   String?
  author    String?
  imageData Bytes?
  imageMimeType String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Partner {
  id           String   @id @default(cuid())
  name         String
  logoData     Bytes
  logoMimeType String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Package {
  id           String   @id @default(cuid())
  title        String
  description  String   // Rich text or HTML content
  imageData    Bytes
  imageMimeType String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
